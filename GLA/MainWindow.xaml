<Window x:Class="GLA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Name="MainDockPanel" Margin="10">
        <WrapPanel DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="10">
            <Button Name="btnAddNewPlayer" Click="UpdatePlayerInfo_Click" Margin="5">Add A New Player</Button>
            <Button Name="btnUpdatePlayerInfo" Click="UpdatePlayerInfo_Click" Margin="5">Update Player Info</Button>
        </WrapPanel>
        <ListBox Name="NewPlayers"/>
    </DockPanel>
</Window>
